#include <iostream>
using namespace std;
void patternPrint(int rows) {
    for (int i = 1; i <= rows; ++i) {
      for (int j = 1; j <= i; ++j) {
         cout<<"*";
      }
      cout<<"\n";
   }
}
int main() {
   int rows;
   scanf("%d", &rows);
   if(rows > 0) {
       patternPrint(rows);
   }
   else {
       cout<<"Invalid Input";
   }
   return 0;
}
